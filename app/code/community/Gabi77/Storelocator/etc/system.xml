<?xml version="1.0"?>
<config>
    <sections>
    	<storelocator translate="label" module="storelocator">
            <label>Storelocator</label>
            <tab>general</tab>
            <frontend_type>text</frontend_type>
            <sort_order>910</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <storelocator_info translate="label ">
                    <label>Developpeur Gabi77</label>
                    <comment>
					<![CDATA[<b>About Module Storelocator</b><br />
							&bull; Format CSV : <span style="font-family:Courier;font-size:11px ">http://www.votre-boutique.com/index.php/export/index?format=csv&export=marketplace</span><br />
							&bull; Format XML : <span style="font-family:Courier;font-size:11px">http://www.votre-boutique.com/index.php/export/index?format=xml&export=marketplace</span><br />
							<br />
							<b>Multi Store :</b>
							<br />					
							<b>Developpeur :</b>							
							<br />
							Module developper by Mr JANEZ Gabriel<br />
							Website : http://www.gabi77.com]]>
					</comment>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                </storelocator_info>
            </groups>
            <groups>
                <storelocator_parameter translate="label">
                    <label>Gestionnaire Page Store</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <title translate="label">
							<label>Title</label>
							<frontend_type>text</frontend_type>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</title>
						<description translate="label">
							<label>Description</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</description>						
                        <image translate="label">
							<label>Image</label>
							<frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image</backend_model>
                            <upload_dir config="system/filesystem/media" scope_info="1">storelocator</upload_dir>
                            <base_url type="media" scope_info="1">storelocator</base_url>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                            <comment>Default logo, will be used in Storelocator.&lt;br /&gt;(jpeg, tiff, png)</comment>
						</image>                        
                        <active translate="label">
							<label>Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</active>
                    </fields>
                </storelocator_parameter>
            </groups>
    	</storelocator>
    </sections>
</config>